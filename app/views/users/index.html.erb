<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.login %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'Logout', user_session_path, :confirm => 'Are you sure?', :method => :delete,:controller=>:user_sessions_controller %>
<%= link_to 'New user', new_user_path %>